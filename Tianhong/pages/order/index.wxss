.shadow {
  box-shadow: 0 10px 30px 0 rgba(0, 0, 0, 0.05);
}

.tabs {
  position: fixed;
  z-index: 100;
  top: 0;
  left: 0;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
  background-color: #fff;
}
.tabs .tab {
  height: 60rpx;
  line-height: 60rpx;
  color: #666;
}

.tabs .active {
  font-size: 30rpx;
  color: #222;
  border-bottom: 4rpx solid #fc0;
}

.order-top {
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #e5e5e5;
  height: 48rpx;
}
.order-top .name {
  font-size: 30rpx;
  font-weight: 500;
}

.order-top .status {
  font-size: 24rpx;
  color: #666;
}

.order-mid {
  margin: 10rpx 0;
  display: flex;
  align-items: center;
}
.p-image {
  height: 140rpx;
  width: 140rpx;
  margin-right: 20rpx;
  border-radius: 16rpx;
}
.order-mid {
  color: #666;
  font-size: 24rpx;
  line-height: 36rpx;
}
.order-use {
  display: flex;
  justify-content: space-between;
  color: #666;
  font-size: 24rpx;
  height: 52rpx;
  line-height: 52rpx;
  /* border-top: 1rpx solid #e5e5e5; */
}

.order-bottom {
  margin-top: 10rpx;
  text-align: right;
}

.bottom-btn {
  display: inline-block;
  height: 60rpx;
  border: 1rpx solid #999;
  color: #444;
  border-radius: 16rpx;
  margin-left: 16rpx;
  font-size: 26rpx;
  padding: 0 16rpx;
  line-height: 60rpx;
}

.btn-orange {
  border: none;
  background-color: #fc0;
  color: #222;
}


/* pop */
.pop-mask{
  position: fixed;
  left: 0rpx;
  top: 0rpx;
  background: rgba(0, 0, 0, 0.6);
  width: 100%;
  height: 100vh;
  z-Index: 1000;
}
.pop-modal {
  box-sizing: border-box;
  width: 560rpx; 
  padding: 30rpx;
  background: #FFFFFF;
  position: absolute;
  top: 20%;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
  border-radius: 16rpx;
}
.pop-title {
  font-family: PingFangSC-Semibold;
  font-size: 32rpx;
  color: #111111;
  margin-bottom: 20rpx;
}
.pop-desc {
text-align: center;
}
.pop-btns { 
  display: flex;
  justify-content: space-between; 
}
.pop-btn {
  width: 280rpx;
  height: 88rpx;
  background-color: #ffcc00;
  color: #222;
  line-height: 88rpx;
  font-size: 30rpx;
  border-radius: 16rpx;
}
.btn--grey {
  background-color: #E5E5E5;
  color: #666666;
  width: 200rpx;
}
.icon-close {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}