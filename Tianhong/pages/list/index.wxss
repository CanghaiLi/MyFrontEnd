page {
  /* background-color: #e7e7e7; */
  background-color: #fff;
  color: #333;
}

.sticky {
  position: sticky;
  position: -webkit-sticky;
  top: 0;
  z-index: 100;
}
.main {
  position: relative;
  width: 100%;
  height: 360rpx;
  background: url("https://s6.jpg.cm/2022/08/23/PVJYSy.png") no-repeat;
  background-size: 100% 100%;
  color: #c7e2ee;
  text-align: center;
}
.main .time-w {
  margin: 32rpx 0 8rpx;
  padding: 6rpx 32rpx 6rpx 18rpx;
  background-color: #fff;
  display: inline-block;
  border-radius: 100rpx;
  color: #333;
  font-size: 26rpx;
  min-width: 464rpx;
}
.time-w .time {
  color: #bbb;
}

.main .total1 {
  text-align: center;
  padding-top: 8rpx;
}
.main .total1 .desc {
  font-size: 24rpx;
}
.main .total1 .amount {
  color: #fff;
  font-size: 88rpx;
  font-weight: bolder;
}

.total23 {
  font-size: 24rpx;
  box-sizing: border-box;
  position: absolute;
  width: 100%;
  bottom: 22rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 28rpx;
}
.total23 .row {
  display: flex;
  align-items: center;
}
.total23 .row .amount {
  font-weight: bold;
  margin-left: 4px;
  font-size: 26rpx;
  color: #fff;
}
.total23 .yuan {
  height: 12rpx;
  width: 12rpx;
  border-radius: 8rpx;
  background-color: #ffcc00;
  margin-right: 6rpx;
  /* color: #1373E6; */
}

.list {
  margin: 20rpx 0;
}
.list-item-wrapper {
  margin-bottom: 20rpx;
  box-shadow: 0 2px 12px hsla(210,1%,40%,.12);
  font-size: 22rpx;
  color: #999;
}
.list-item {
  padding: 14rpx 24rpx;
}
.list-item .top {
  display: flex;
  justify-content: space-between;
}
.top .status {

  display: inline-block;
  padding: 2rpx 10rpx;
  border: 1rpx solid #1373E6;
  color: #1373E6;
  border-radius: 16rpx;
}
.status.back {
  border: 1rpx solid #f50;
  color: #f50;
}

.list-item .cent {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
}
.cent .left {
  display: flex;
  align-items: center;
}
.cent .left .svg {
  width: 72rpx;
  height: 72rpx;
  margin-right: 20rpx;
}
.svg image {
  width: 100%;
  height: 100%;
}

.cent .right {
  font-size: 36rpx;
  display: flex;
  align-items: center;
  color: #333;
}
.cent .right text {
  font-size: 50rpx;
  font-weight: bold;
}


.van-swipe-cell__right {
  width: 100rpx;
  height: 100%;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  background-color: red;
  /*文本垂直居中*/
  display: flex;
  align-items: center;
  justify-content: center;
}
