.swiper {
  margin-top: 6vh;
  height: 80vh;
}

.center {
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 16rpx;
}



swiper image.cradBg {
  transition: all .2s;
  box-shadow: 0 10px 20px rgba(0,0,0,0.2);
  /* margin-top: 20rpx; */
  border-radius: 16rpx;
}

swiper image.cradBg.active {
  width: 600rpx;
  height: 72vh;
}

swiper image.cradBg.quiet {
  width: 560rpx;
  height: 64vh;
}
.boat-bg {
  position: absolute;
  bottom: 50rpx;
  left: 0;
  width: 180rpx;
  height: 180rpx;
}
.txtBox {
  position: absolute;
  z-index: 100;
  padding: 20rpx;
  top: 0;
  left: 0;
  right: 0;
  box-sizing: border-box;
  color: #000;
}

.txtBox .top {
  /* transform: translateX(20rpx); */
  width: 100%;
  height: 80rpx;
  /* padding-bottom: 32rpx; */
  display: flex;
  justify-content: space-between;
  align-items: center;
  /* border-bottom: 1rpx dashed #999; */
}

.top .name {
  font-size: 32rpx;
  font-weight: 500;
}

.top .tag {
  height: 52rpx;
  font-size: 24rpx;
  line-height: 52rpx;
  padding-left: 20rpx;
  padding-right: 10rpx;
  border-top-left-radius: 16rpx;
  border-bottom-left-radius: 16rpx;
  background-color: #FC0;
  transform: translateX(20rpx);
}
.red-cs {
  background-color: #FFFAE5 !important;
  color: red;
}
.green-cs {
  background-color: #4e6ef2 !important;
  color: #fff;
}

.desc-w {
  margin-bottom: 10rpx;
  font-size: 22rpx;
  color: #333;
  text-align: center;
  border-bottom: 1rpx dashed #ccc;
  border-top: 1rpx dashed #ccc;
  padding: 12rpx 0;
}
.desc-w .imp {
  font-size: 28rpx;
  color: #000;
  font-weight: 500;
  line-height: 40rpx;
}

.mid {
  text-align: center;
}

.mid .btn {
  background-color: #fff;
  font-size: 24rpx;
  height: 52rpx;
  line-height: 52rpx;
  border-radius: 30rpx;
  border: 1rpx solid #222;
  width: 140rpx;
  margin: 20rpx auto 12rpx;
}

.mid .key-b {
  font-size: 30rpx;
  font-weight: 500;
  line-height: 1;
  margin-bottom: 20rpx;
}
.tips {
  margin: 0 auto;
  font-size: 22rpx;
  max-width: 80%;
}

.mid .qrcode {
  width: 300rpx;
  height: 300rpx;
}
/* 指示点 */
swiper .wx-swiper-dots.wx-swiper-dots-horizontal {
  margin-bottom: -16rpx;
}

swiper .wx-swiper-dot {
  width: 28rpx;
  display: inline-flex;
  height: 6rpx;
  margin-left: 10rpx;
  justify-content: space-between;
}

swiper .wx-swiper-dot::before {
  content: '';
  flex-grow: 1;
  background: #E6E6E6;
  border-radius: 8rpx
}

swiper .wx-swiper-dot-active::before {
  background: #F50;
}