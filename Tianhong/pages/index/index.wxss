page {
  /* background-color: #e7e7e7; */
  background-color: #fff;
  color: #333;
}
.main {
  /* position: sticky;
  position: -webkit-sticky;
  top: 0; */
  position: relative;
  width: 100%;
  height: 300rpx;
  background: url("https://s6.jpg.cm/2022/08/23/PVJYSy.png") no-repeat;
  background-size: 100% 100%;
  color: #c7e2ee;
}
.main .total1 {
  text-align: center;
  padding-top: 8rpx;
}
.main .total1 .desc {
  font-size: 24rpx;
}
.main .total1 .amount {
  color: #fff;
  font-size: 88rpx;
  font-weight: bolder;
}

.total23 {
  font-size: 24rpx;
  box-sizing: border-box;
  position: absolute;
  width: 100%;
  bottom: 52rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 28rpx;
}
.total23 .row {
  display: flex;
  align-items: center;
}
.total23 .row .amount {
  font-weight: bold;
  margin-left: 4px;
  font-size: 26rpx;
  color: #fff;
}
.total23 .yuan {
  height: 12rpx;
  width: 12rpx;
  border-radius: 8rpx;
  background-color: #ffcc00;
  margin-right: 6rpx;
  /* color: #1373E6; */
}
.line-w {
  padding: 32rpx 20rpx 0;
  background-color: #fff;
  border-top-right-radius: 30rpx;
  border-top-left-radius: 30rpx;
  transform: translateY(-30rpx);
}
.line-w .chart {
  background-color: rgb(247, 247, 247);
}

.huanbi {
  padding: 0 20rpx;
  margin-top: 16rpx;
}
.huanbi .hb1 {
  /* height: 160rpx; */
  font-size: 20rpx;
  box-shadow: 0 2px 12px hsla(210,1%,40%,.12);
  padding: 20rpx;
  position: relative;
  margin-bottom: 20rpx;
}
.huanbi .hb {
  display: flex;
  justify-content: space-between;
}
.hb1 .title {
  position: absolute;
  top: 0;
  left: 0;
  background-color: #1373E6;
  width: 88rpx;
  height: 36rpx;
  border-bottom-right-radius: 10rpx;
  text-align: center;
  color: #fff;
  font-size: 20rpx;
  margin: 0 auto;
  line-height: 34rpx;
}
.hb .left {
  padding-top: 28rpx;
  flex: 1;
}
.hb .left .row {
  display: flex;
  text-align: center;
}
.row.l-bottom {
  color: #999;
}
.row .amount {
  font-weight: bold;
  font-size: 24rpx;
}
.row-ch {
  width: 50%;
}
.hb .right {
  text-align: center;
  width: 180rpx;
  font-weight: bold;
}
.hb .right .desc {
  font-size: 26rpx;
}
.hb .right .content {
  width: 128rpx;
  height: 128rpx;
  border-radius: 100rpx;
  background-color: #1373E6;
  margin: 6rpx auto 0;
  color: #fff;
  line-height: 128rpx;
  font-size: 32rpx;
}

.titlehead {
  font-size: 28rpx;
  font-family: PingFangSC-Medium;
  margin-bottom: 16rpx;
  position: relative;
  padding-left: 18rpx;
}
.titlehead::after {
  position: absolute;
  content: "";
  width: 10rpx;
  height: 30rpx;
  background-color: #1373E6;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
}
