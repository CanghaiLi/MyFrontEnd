<view class="top-wrapper">
  <view class="orange">
    <view class="info" wx:if="{{!nickName}}" bindtap="getUserInfo">
      <image class="head" src="/images/icon/head.png"></image>
      <view>
        <view class="welcome">点击获取头像昵称</view>
      </view>
    </view>
    <view class="info" wx:else>
      <image class="head" src="{{avatarUrl}}"></image>
      <view>
        <view class="name">{{nickName}}</view>
        <view class="welcome">尊敬的用户，欢迎您！</view>
      </view>
    </view>
  </view>
</view>
