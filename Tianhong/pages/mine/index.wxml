<view class="top-wrapper">
  <view class="orange">
    <view class="info" wx:if="{{!nickName}}" bindtap="getUserInfo">
      <image class="head" src="/images/icon/head.png"></image>
      <view>
        <view class="welcome">点击获取头像昵称</view>
      </view>
    </view>
    <view class="info" wx:else>
      <image class="head" src="{{avatarUrl}}"></image>
      <view>
        <view class="name">{{nickName}}</view>
        <view class="welcome">尊敬的游客，欢迎您！</view>
      </view>
    </view>
  </view>
  <view class="orders">
    <view class="order-title">我的订单</view>
    <view class="items-wrap">
      <view class="items">
        <image class="order-icon" src="/images/icon/order-all.png" data-value="all" bindtap="gotoOrder"></image>
        <view>全部订单</view>
      </view>
      <view class="items">
        <image class="order-icon" src="/images/icon/order-use.png" data-value="todo" bindtap="gotoOrder"></image>
        <view>待使用</view>
      </view>
      <view class="items">
        <image class="order-icon" src="/images/icon/order-wait.png" data-value="topay" bindtap="gotoOrder"></image>
        <view>待付款</view>
      </view>
      <view class="items">
        <image class="order-icon" src="/images/icon/order-return.png"  data-value="refund" bindtap="gotoOrder"></image>
        <view>已退款</view>
      </view>
    </view>
  </view>
</view>

<view class="container" style="margin-top: 28rpx;">
  <view class="cardw funcRow" bindtap="gotoCoupon">
    <image src="/images/icon/coupon.png"></image>
    <text style="flex: 1;">优惠券</text> 
    <image class="arr-r" src="/images/arr.png"/>
  </view>
  <view class="cardw funcRow" bindtap="gotoInvoice">
    <image src="/images/icon/fapiao.png"></image>
    <text style="flex: 1;">发票管理</text> 
    <image class="arr-r" src="/images/arr.png"/>
  </view>
  <view class="cardw funcRow" bindtap="gotoMessage">
    <image src="/images/icon/message.png"></image>
    <text style="flex: 1;">消息通知</text> 
    <image class="arr-r" src="/images/arr.png"/>
  </view>
  <view class="cardw funcRow" data-type="help" bindtap="gotoContact">
    <image src="/images/icon/contact.png"></image>
    <text style="flex: 1;">联系客服</text> 
    <image class="arr-r" src="/images/arr.png"/>
  </view>
  <view class="cardw funcRow" data-type="save" bindtap="gotoContact">
    <image src="/images/icon/save.png"></image>
    <text style="flex: 1;">拨号救援</text> 
    <image class="arr-r" src="/images/arr.png"/>
  </view>

</view>
